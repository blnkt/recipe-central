<h1> All tags </h1>

<ul>
  <% @tags.each do |tag| %>
    <li><a href="/tags/<%= tag.id %>"><%= tag.name %></a></li>
  <% end %>
</ul>

<%= render('layouts/errors', :object => @tag) %>

<form action="/tags" method = "post">
  <label for="tag_name">Tag</label>
  <input id="tag_name" name="tag[name]" type="text" value="<%= @tag.name %>">
  <button>Add Tag</button>
</form>


